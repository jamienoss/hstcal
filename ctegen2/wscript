# vim: set syntax=python:

def build(bld):
    t = bld.stlib(
        source = [
            'ctehelpers.c',
            'wf3ctegen2.c',
            'ctegen2.c'
            ],
        target = 'ctegen2',
        includes = ['.',
                    '../pkg/acs/calacs/acscte/',
                    '../pkg/acs/calacs/include/',
                    '../pkg/wfc3/calwf3/include/',
                    '../pkg/wfc3/calwf3/wf3cte/',
                    '../include/'
                    ],
        use = ['CFITSIO', 'OPENMP'],
        install_path = bld.env.INSTALL_LIB and '${PREFIX}/lib'
        )
